<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.myapplication.EditActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160px"
        android:orientation="horizontal"
        android:background="#4fc0e8"
        android:id="@+id/l1"
        >

        <ImageButton
            android:id="@+id/ebBack"
            android:layout_width="57dp"
            android:layout_height="match_parent"
            android:src="@drawable/newback"
            android:background="#4fc0e8"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="160px"
            android:text="管理配送地址"
            android:textSize="70px"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_weight="3"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#fff">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收货人姓名"
                android:textSize="50px"
                android:textColor="#ff060305"/>
            <EditText
                android:id="@+id/eetReciever"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ff060305"
                android:hint="小A"/>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电话"
                android:textSize="50px"
                android:textColor="#ff060305"/>
            <EditText
                android:id="@+id/eetTel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ff060305"
                android:hint="配送员联系您的电话"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地址"
                android:textSize="50px"
                android:textColor="#ff060305"/>
            <EditText
                android:id="@+id/eetAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ff060305"
                android:hint="请填写详细送货地址"/>
        </LinearLayout>

        <Button
            android:id="@+id/ebSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   保 存   "
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>

        </LinearLayout>

</LinearLayout>
