<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@android:id/tabhost"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.eagle.easyshopping.MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160px"
            android:orientation="horizontal"
            android:background="#4fc0e8"
            android:id="@+id/l1"
            >

            <ImageButton
                android:name="@+id/ibbBack"
                android:layout_width="57dp"
                android:layout_height="match_parent"
                android:src="@drawable/newback"
                android:background="#4fc0e8"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="160px"
                android:text="统一银座      "
                android:textSize="70px"
                android:textColor="#fff"
                android:gravity="center"
                android:layout_weight="3"
                />
        </LinearLayout>

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="110" />

        <ImageView
            android:id="@+id/i1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ff060305"
            android:layout_below="@+id/l2"/>

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1121" >

            <LinearLayout
                android:id="@+id/good"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#fff"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/l3"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:orientation="horizontal"
                android:layout_below="@+id/i1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical"
                    >
                    <Button
                        android:id="@+id/bhot"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="#ccc"
                        android:text="热榜"
                        android:textColor="#ff060305"
                        android:textSize="50px"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#fff"/>
                    <Button
                        android:id="@+id/bsanck"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="#ccc"
                        android:text="零食区"
                        android:textColor="#ff060305"
                        android:textSize="50px"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#fff"/>
                    <Button
                        android:id="@+id/bdaily"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="#ccc"
                        android:text="日化区"
                        android:textColor="#ff060305"
                        android:textSize="50px"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#fff"/>
                    <Button
                        android:id="@+id/bfruit"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="#ccc"
                        android:text="果蔬区"
                        android:textColor="#ff060305"
                        android:textSize="50px"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#fff"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#ff060305"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ListView
                        android:id="@+id/lvFoods"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#fff"
                        android:divider="#ccc"
                        android:dividerHeight="2dp">

                    </ListView>
                </LinearLayout>

            </LinearLayout>
                <ImageView
                    android:id="@+id/i2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ff060305"
                    android:layout_below="@+id/l3"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:background="#fff"
                    android:layout_below="@+id/i2"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/tvP"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="够   省   心"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:layout_marginTop="10dp"
                            android:textColor="#ff060305"/>

                        <TextView
                            android:id="@+id/tvP2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="放   心   购"
                            android:textSize="16sp"
                            android:textColor="#ffff1118"
                            android:gravity="center"
                            android:layout_marginTop="5dp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2">
                        <Button
                            android:id="@+id/bok"
                            android:layout_width="85dp"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:background="#ccc"
                            android:text="选好了"
                            android:textColor="#ff060305"
                            android:textSize="50px"/>

                    </LinearLayout>
                </LinearLayout>






            </LinearLayout>


            <LinearLayout
                android:id="@+id/shop"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#fff"
                android:gravity="center_horizontal"
                android:orientation="vertical" >
                <LinearLayout
                    android:id="@+id/ll3"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:orientation="vertical"
                    android:layout_below="@+id/i1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_weight="5"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/ivhead1"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:src="@drawable/head1"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:id="@+id/setinf">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                >

                                <TextView
                                    android:id="@+id/store_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="5dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="4dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_weight="1.05"
                                    android:text="店铺名称"
                                    android:textColor="#ff060305"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:textSize="18dp" />

                                <TextView
                                    android:id="@+id/status"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="5dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="20dp"
                                    android:layout_marginTop="5dp"
                                    android:text="店铺状态"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:textColor="#ffbf4d" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                >

                                <ImageView
                                    android:id="@+id/nice"
                                    android:layout_width="60px"
                                    android:layout_height="60px"
                                    android:layout_marginLeft="5dp"
                                    android:background="#0fff"
                                    android:scaleType="fitCenter"
                                    android:src="@drawable/orangenice" />

                                <TextView
                                    android:id="@+id/Num1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:layout_gravity="center_vertical"
                                    android:text="Num1"
                                    android:textColor="#ff060305"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:textSize="16sp" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="horizontal" >

                                <TextView
                                    android:id="@+id/Num3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginTop="5dp"
                                    android:text="￥ 10.0"
                                    android:textColor="#ff060305"
                                    android:textAppearance="?android:attr/textAppearanceSmall" />

                                <TextView
                                    android:id="@+id/Num4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginTop="5dp"
                                    android:text="￥ 0.0"
                                    android:textColor="#ff060305"
                                    android:textAppearance="?android:attr/textAppearanceSmall" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="#ccc"/>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <TextView
                          android:id="@+id/stvComment" 
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                            android:layout_marginLeft="15dp"
                        android:text="查看评论（共10条）"
                            android:textColor="#ff060305"
                            android:layout_weight="6"/>
                        
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#ccc"/>

                        <ListView
                            android:id="@+id/lvComments"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#fff"
                            android:divider="#ccc"
                            android:dividerHeight="2dp"
                            android:layout_weight="1">
                        </ListView>

                    </LinearLayout>


                </LinearLayout>

                <ImageView
                    android:id="@+id/i12"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ff060305"
                    android:layout_below="@+id/l3"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:background="#fff"
                    android:layout_below="@+id/i12"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/tvPP"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="送货小哥那么帅，快来给个好评吧"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:textColor="#ffff1118"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:layout_marginLeft="10dp">
                        <Button
                            android:id="@+id/bargue"
                            android:layout_width="85dp"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:background="#ccc"
                            android:text="我要评价"
                            android:textColor="#ff060305"
                            android:textSize="50px"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </FrameLayout>


    </LinearLayout>

</TabHost>
